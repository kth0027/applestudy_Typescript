{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "declaration" : true,
    // 여기 있는 타입들은 글로벌하게 사용가능
    "typeRoots" : ["./types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}